{
  "name": "kerberos-cli",
  "version": "1.0.0-alpha.1",
  "main": "./libs/index.js",
  "bin": {
    "kerberos-cli": "./bin/cli",
    "kerbe": "./bin/cli"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kerberos-cli/kerberos-cli.git"
  },
  "scripts": {
    "commit": "git-cz",
    "prepublishOnly": "npm run product",
    "lint-stage:format": "prettier --config .prettierrc.js --write --",
    "lint-stage:lint:ts": "eslint --config .eslintrc.js --ext .ts --fix --",
    "format": "prettier --config .prettierrc.js --write \"**/*.{js,ts,d.ts,md,json,yml,yaml}\"",
    "lint:ts": "eslint --config .eslintrc.js --ext .ts ./src --fix",
    "lint": "npm run lint:ts",
    "test": "npm run lint",
    "product": "tsc --project ./src --outDir ./libs --declaration",
    "develop": "tsc --project ./src --outDir ./libs --declaration --watch",
    "start": "npm run develop"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "command-exists": "^1.2.9",
    "commander": "^6.1.0",
    "copyfiles": "^2.3.0",
    "execa": "^4.0.3",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "inquirer": "^7.3.3",
    "inquirer-command-prompt": "^0.0.29",
    "inquirer-search-checkbox": "^1.0.0",
    "inquirer-search-list": "^1.2.6",
    "is-git-url": "^1.0.0",
    "lodash": "^4.17.20",
    "pretty-error": "^2.1.1",
    "promise-waterfall": "^0.1.0",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/chalk": "^2.2.0",
    "@types/command-exists": "^1.2.0",
    "@types/commander": "^2.12.2",
    "@types/copyfiles": "^2.2.0",
    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/inquirer": "^7.3.1",
    "@types/is-git-url": "^1.0.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.6.4",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "commitizen": "^4.0.3",
    "commitlint-plugin-i18n": "^0.0.1-alpha.3",
    "cz-customizable": "^6.2.1",
    "cz-customizable-i18n-config": "^0.0.1-alpha.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "utility-types": "^3.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,d.ts,vue,md,json,yml,yaml}": [
      "npm run lint-stage:format"
    ],
    "**/*.{ts,tsx,d.ts}": [
      "npm run lint-stage:lint:ts"
    ]
  }
}
